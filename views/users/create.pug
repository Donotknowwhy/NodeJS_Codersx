extends ../layouts/common.pug
block content

    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action='/users/create',method="POST")

        .form-group
            label(for="nameInput") Name
            input#nameInput.form-control(name="name",type="text",value=values ? values.name : '')
        .form-group
            label(for="phoneInput") Phone
            input#phoneInput.form-control(name="phone",type="text",value=values ? values.phone : '')
            

        button(class="btn btn-primary") Create
