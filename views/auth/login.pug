extends ../layouts/common.pug
block content

    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action='/auth/login',method="POST")

        .form-group
            label(for="emailInput") Email
            input#emailInput.form-control(name="email",type="text",value=values ? values.email : '')
        .form-group
            label(for="passwordInput") Password
            input#passwordInput.form-control(name="password",type="password",value=values ? values.password : '')
            

        button(class="btn btn-primary") Login
